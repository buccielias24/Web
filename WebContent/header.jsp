    	%>
    	<div class="dropdown">
  			<button onclick="myFunction()" class="dropbtn"><%=c.getUser()%></button>
  			<div id="myDropdown" class="dropdown-content">
    		<a href="/UsuarioEdit">Editar</a>
    		<a href="#about">About</a>
